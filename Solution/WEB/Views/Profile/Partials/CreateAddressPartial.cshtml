@model CommonModels.Models.UserAddressVM.WithValidation

@Html.Partial("LayoutPartials/SuccessMessageIfExistPartial")

@using(Html.BeginForm("CreateAddress", "Profile", FormMethod.Post, new { id = "address-create-form" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Új cím felvétele</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.ZipCode)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ZipCode)
            @Html.ValidationMessageFor(model => model.ZipCode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.City)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.City)
            @Html.ValidationMessageFor(model => model.City)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StreetAndHouseNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StreetAndHouseNumber)
            @Html.ValidationMessageFor(model => model.StreetAndHouseNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Country)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Country)
            @Html.ValidationMessageFor(model => model.Country)
        </div>

        <p>
            <input id="create-address-submit" type="button" value="Cím felvétele" onclick=" createAddress(this)" />
        </p>
    </fieldset>
}